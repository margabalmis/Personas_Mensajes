<UserControl x:Class="Personas_Mensajes.user_controls.ConsultarPersonaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personas_Mensajes.user_controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock
            Margin="8,16,8,0">
            Nombre</TextBlock>
        <TextBox
            IsReadOnly="True"
            Text="{Binding Path=Nombre}"
            Margin="8,0"
            x:Name="NombreTextBox"></TextBox>

        <TextBlock
            Margin="8,16,8,0">Edad</TextBlock>
        <TextBox
            IsReadOnly="True"
            Text="{Binding Path=Edad}"
            Margin="8,0"
            x:Name="EdadTextBox"></TextBox>

        <TextBlock
            Margin="8,16,8,0">Nacionalidad</TextBlock>
        <TextBox
            Text="{Binding Path=Nacionalidad}"
            IsReadOnly="True"
            Margin="8,0"
            x:Name="NacionalidadTextBox"></TextBox>
    </StackPanel>
</UserControl>
